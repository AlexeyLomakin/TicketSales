<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    tools:context=".ui.MainActivity">

    <ImageButton
        android:id="@+id/btn_swap"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/airplane_blue"
        app:layout_constraintEnd_toEndOf="@+id/card_search"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:layout_margin="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#3E3F43"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/departure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/departure_hint"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#9F9F9F"
                android:drawablePadding="10dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/divider_view"/>

            <View
                android:id="@+id/divider_view"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#5E5F61"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="@+id/departure"
                app:layout_constraintStart_toStartOf="@+id/departure"
                app:layout_constraintTop_toBottomOf="@+id/departure"
                app:layout_constraintBottom_toTopOf="@+id/arrival" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/arrival"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="10dp"
                android:hint="@string/arrival_hint"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#9F9F9F"
                app:layout_constraintEnd_toEndOf="@id/divider_view"
                app:layout_constraintStart_toStartOf="@id/divider_view"
                app:layout_constraintTop_toBottomOf="@id/divider_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_departure_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 фев, сб"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_search"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/tv_return_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="обратно"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_departure_date"
        app:layout_constraintTop_toTopOf="@id/tv_departure_date"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/tv_passengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1, эконом"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_return_date"
        app:layout_constraintTop_toTopOf="@id/tv_departure_date"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"/>

    <ImageButton
        android:id="@+id/btn_filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/tv_passengers"
        app:layout_constraintTop_toTopOf="@id/tv_departure_date"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"/>

    <LinearLayout
        android:id="@+id/ticket_recommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_departure_date"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Уральские авиалинии"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 390 ₽"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_search_tickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Посмотреть все билеты"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/ticket_recommendations"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_price_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подписка на цену"
        android:textColor="@color/white"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_search_tickets"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
